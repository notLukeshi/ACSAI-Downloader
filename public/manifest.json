{
    "manifest_version": 3,
    "name": "ACSAI Downloader",
    "version": "1.0",
    "description": "Downloads attachments from ACSAI's circus.francescodb.me",
    "permissions": [
      "activeTab",
      "scripting",
      "downloads"
    ],
    "action": {
      "default_popup": "index.html"
    },
    "icons": {
      "16": "favicon.ico",
      "48": "favicon-96x96.png",
      "128": "apple-touch-icon.png"
    },
    "background": {
      "service_worker": "assets/background.js",
      "type": "module"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["assets/content.js"]
      }
    ],
    "web_accessible_resources": [
      {
        "resources": ["assets/*"],
        "matches": ["<all_urls>"]
      }
    ]
  }
